print("=== WIZYTÓWKA UCZNIA ===")

name = input("Jak masz na imię? ").strip()
profil = input("Na jakim profilu się znajdujesz? ").strip()
age_text = input("Ile masz lat? ").strip()
minutes_text = input("Ile minut dziennie chcesz uczyć się Pythona? ").strip()

if age_text.isdigit():
    age = int(age_text)

    print(f"Masz na imię {name}.")
    print(f"Jesteś na profilu {profil}.")
    print(f"Masz {age} lat.")

    if age >= 18:
        print("Jesteś pełnoletni.")
    else:
        print("Jesteś niepełnoletni.")

    # Walidacja i ocena minut nauki
    if minutes_text.isdigit():
        minutes = int(minutes_text)

        if minutes < 20:
            print("Trochę mało, ale lepiej niż nic.")
        elif minutes <= 40:
            print("Super, idealny zakres.")
        else:
            print("Mega, pilnuj regularności.")
    else:
        print("Minuty muszą być liczbą!")
else:
    print("Wiek musi być liczbą!")
